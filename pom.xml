    <profiles>
        <profile>
            <id>dev</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>

            <properties>
                <jelastic.environment>extacrm-dev</jelastic.environment>
                <extacrm.ssl.pattern>NONE</extacrm.ssl.pattern>

                <extacrm.gae.log.props>WEB-INF/logging-dev.properties</extacrm.gae.log.props>
                <jpa.logging.level>FINE</jpa.logging.level>
                <jpa.ddl-generation>create-or-extend-tables</jpa.ddl-generation>
                <!--<jpa.ddl-generation>none</jpa.ddl-generation>-->
                <!--<jpa.generation.output-mode>both</jpa.generation.output-mode>-->
                <jpa.generation.output-mode>sql-script</jpa.generation.output-mode>
            </properties>
        </profile>

        <profile>
            <id>prod</id>

            <properties>
                <jelastic.environment>extacrm-prod</jelastic.environment>
                <extacrm.ssl.pattern>CONFIDENTIAL</extacrm.ssl.pattern>

                <extacrm.gae.log.props>WEB-INF/logging.properties</extacrm.gae.log.props>
                <jpa.logging.level>WARNING</jpa.logging.level>
                <jpa.ddl-generation>none</jpa.ddl-generation>
                <jpa.generation.output-mode>database</jpa.generation.output-mode>
            </properties>
        </profile>

        <profile>
            <id>uat</id>

            <properties>
                <jelastic.environment>extacrm-uat</jelastic.environment>
                <extacrm.ssl.pattern>CONFIDENTIAL</extacrm.ssl.pattern>

                <extacrm.gae.log.props>WEB-INF/logging-uat.properties</extacrm.gae.log.props>
                <jpa.logging.level>FINE</jpa.logging.level>
                <jpa.ddl-generation>create-or-extend-tables</jpa.ddl-generation>
                <jpa.generation.output-mode>database</jpa.generation.output-mode>
            </properties>
        </profile>
    </profiles>

