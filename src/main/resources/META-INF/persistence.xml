<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="extacrmJpaUnit" transaction-type="RESOURCE_LOCAL">

        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

        <class>ru.extas.model.A7Form</class>
        <class>ru.extas.model.AbstractExtaObject</class>
        <class>ru.extas.model.AddressInfo</class>
        <class>ru.extas.model.Company</class>
        <class>ru.extas.model.Contact</class>
        <class>ru.extas.model.ContactCode</class>
        <class>ru.extas.model.FormTransfer</class>
        <class>ru.extas.model.Insurance</class>
        <class>ru.extas.model.PayAccount</class>
        <class>ru.extas.model.Person</class>
        <class>ru.extas.model.Policy</class>
        <class>ru.extas.model.UserGroup</class>
        <class>ru.extas.model.UserProfile</class>
        <class>ru.extas.model.converter.LocalDateConverter</class>
        <class>ru.extas.model.converter.DateTimeConverter</class>
        <class>ru.extas.model.converter.UserRoleConverter</class>
        <class>ru.extas.model.Lead</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>

        <properties>
            <!--Connection to DB-->
            <property name="javax.persistence.jdbc.driver" value="${extacrm.jdbc.driver}"/>
            <property name="javax.persistence.jdbc.url" value="${extacrm.jdbc.url}"/>
            <property name="javax.persistence.jdbc.user" value="${extacrm.jdbc.user}"/>
            <property name="javax.persistence.jdbc.password" value="${extacrm.jdbc.password}"/>

            <property name="eclipselink.target-database" value="MySQL"/>
            <property name="eclipselink.jpa.uppercase-column-names" value="true"/>
            <property name="eclipselink.jdbc.uppercase-columns" value="true"/>
            <property name="eclipselink.jdbc.batch-writing" value="jdbc"/>

            <property name="eclipselink.ddl-generation" value="${jpa.ddl-generation}"/>
            <property name="eclipselink.ddl-generation.output-mode" value="database"/>
            <property name="eclipselink.create-ddl-jdbc-file-name" value="createDDL_ddlGeneration.sql"/>
            <property name="eclipselink.drop-ddl-jdbc-file-name" value="dropDDL_ddlGeneration.sql"/>

            <property name="eclipselink.logging.level" value="${jpa.logging.level}"/>
            <property name="eclipselink.logging.level.sql" value="${jpa.logging.level}"/>
            <property name="eclipselink.logging.parameters" value="true"/>
            <property name="eclipselink.logging.timestamp" value="false"/>
            <property name="eclipselink.logging.session" value="false"/>
            <property name="eclipselink.logging.thread" value="false"/>
        </properties>

    </persistence-unit>

</persistence>