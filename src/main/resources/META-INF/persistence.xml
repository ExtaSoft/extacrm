<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="extacrmJpaUnit" transaction-type="RESOURCE_LOCAL">

        <provider>org.datanucleus.api.jpa.PersistenceProviderImpl</provider>

        <class>ru.extas.model.A7Form</class>
        <class>ru.extas.model.AbstractExtaObject</class>
        <class>ru.extas.model.AddressInfo</class>
        <class>ru.extas.model.Company</class>
        <class>ru.extas.model.Contact</class>
        <class>ru.extas.model.ContactCode</class>
        <class>ru.extas.model.FormTransfer</class>
        <class>ru.extas.model.Insurance</class>
        <class>ru.extas.model.PayAccount</class>
        <class>ru.extas.model.Person</class>
        <class>ru.extas.model.Policy</class>
        <class>ru.extas.model.UserGroup</class>
        <class>ru.extas.model.UserProfile</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>

        <properties>
            <!--Connection to DB-->
            <property name="javax.persistence.jdbc.driver" value="${extacrm.jdbc.driver}"/>
            <property name="javax.persistence.jdbc.url" value="${extacrm.jdbc.url}"/>
            <property name="javax.persistence.jdbc.user" value="${extacrm.jdbc.user}"/>
            <property name="javax.persistence.jdbc.password" value="${extacrm.jdbc.password}"/>

            <!--schema creation-->
            <property name="datanucleus.autoCreateSchema" value="false"/>
            <property name="datanucleus.autoCreateTables" value="false"/>
            <property name="datanucleus.autoCreateColumns" value="false"/>
            <property name="datanucleus.autoCreateConstraints" value="false"/>
            <!--Which case to use in generated table and column names.-->
            <property name="datanucleus.identifier.case" value="PreserveCase"/>

            <!--schema validation-->
            <property name="datanucleus.validateTables" value="false"/>
            <property name="datanucleus.validateConstraints" value="false"/>
            <property name="datanucleus.validateColumns" value="false"/>
            <property name="datanucleus.rdbms.CheckExistTablesOrViews" value="false"/>
            <property name="datanucleus.rdbms.initializeColumnInfo" value="None"/>

            <property name="datanucleus.DetachAllOnCommit" value="true"/>
        </properties>

    </persistence-unit>

</persistence>